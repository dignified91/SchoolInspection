<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    tools:openDrawer="start">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/toolbar5">


        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:background="@color/toolbar5"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:fontFamily="@font/fontfamily"/>


            <ImageButton
                android:id="@+id/btnback"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@null"
                android:src="@drawable/ic_back_svg" />


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">
            <LinearLayout
                android:id="@+id/det_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/name_"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:gravity="right"
                            android:maxLines="1"
                            android:text="@string/bfname_"
                            android:textColor="@color/background"
                            android:textSize="14sp"
                            android:fontFamily="@font/fontfamily"/>

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/name_"
                            android:background="@drawable/custom_view_tv"
                            android:cursorVisible="true"
                            android:gravity="right"
                            android:hint="@string/bfname"
                            android:maxLines="1"
                            android:textColor="@color/text"
                            android:textSize="16sp"
                            android:fontFamily="@font/fontfamily"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/family_"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:gravity="right"
                            android:maxLines="1"
                            android:text="@string/family_"
                            android:textColor="@color/background"
                            android:textSize="14sp"
                            android:fontFamily="@font/fontfamily"/>

                        <EditText
                            android:id="@+id/family"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/family_"
                            android:background="@drawable/custom_view_tv"
                            android:cursorVisible="true"
                            android:gravity="right"
                            android:hint="@string/family"
                            android:maxLines="1"
                            android:textColor="@color/text"
                            android:textSize="16sp"
                            android:fontFamily="@font/fontfamily"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/mobile_"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:gravity="right"
                            android:maxLines="1"
                            android:text="@string/mobile_"
                            android:textColor="@color/background"
                            android:textSize="14sp"
                            android:fontFamily="@font/fontfamily"/>

                        <EditText
                            android:id="@+id/mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/mobile_"
                            android:background="@drawable/custom_view_tv"
                            android:cursorVisible="true"
                            android:gravity="right"
                            android:hint="@string/mobile"
                            android:minLines="1"
                            android:textColor="@color/text"
                            android:inputType="number"
                            android:fontFamily="@font/fontfamily"
                            android:textSize="16sp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/number_"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:gravity="right"
                            android:maxLines="1"
                            android:text="@string/number_"
                            android:textColor="@color/background"
                            android:textSize="14sp"
                            android:fontFamily="@font/fontfamily"/>

                        <EditText
                            android:id="@+id/number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/number_"
                            android:background="@drawable/custom_view_tv"
                            android:cursorVisible="true"
                            android:gravity="right"
                            android:hint="@string/number"
                            android:inputType="number"
                            android:fontFamily="@font/fontfamily"
                            android:maxLines="1"
                            android:textColor="@color/text"
                            android:textSize="16sp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/distance_"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:gravity="right"
                            android:maxLines="1"
                            android:text="@string/distance_"
                            android:textColor="@color/background"
                            android:textSize="14sp"
                            android:fontFamily="@font/fontfamily"/>

                        <LinearLayout
                            android:id="@+id/lvdemspinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/distance_"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:weightSum="1.0">
                            <EditText
                                android:id="@+id/distance1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/star1"
                                android:background="@drawable/custom_view_tv"
                                android:cursorVisible="true"
                                android:gravity="center"
                                android:inputType="number"
                                android:fontFamily="@font/fontfamily"
                                android:hint="@string/distance1"
                                android:maxLines="1"
                                android:textColor="@color/text"
                                android:layout_weight="0.45"
                                android:textSize="16sp" />


                            <TextView
                                android:id="@+id/star1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/distance2"
                                android:gravity="right"
                                android:maxLines="1"
                                android:text="*"
                                android:textColor="@color/background"
                                android:textStyle="bold"
                                android:layout_weight="0.08"
                                android:fontFamily="@font/fontfamily"
                                android:layout_marginRight="8dp"
                                android:textSize="18sp" />

                            <EditText
                                android:id="@+id/distance2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/distance_"
                                android:background="@drawable/custom_view_tv"
                                android:cursorVisible="true"
                                android:gravity="center"
                                android:inputType="number"
                                android:hint="@string/distance2"
                                android:maxLines="1"
                                android:fontFamily="@font/fontfamily"
                                android:textColor="@color/text"
                                android:layout_weight="0.45"
                                android:layout_marginLeft="5dp"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rldate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/date_"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:gravity="right"
                            android:maxLines="1"
                            android:text="@string/date_"
                            android:textColor="@color/background"
                            android:textSize="14sp"
                            android:fontFamily="@font/fontfamily"/>

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/date_"
                            android:background="@drawable/custom_view_tv"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="@string/date"
                            android:textColor="@color/text"
                            android:textSize="18sp"
                            android:fontFamily="@font/fontfamily"/>


                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/lvregionspinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lvdayspinner"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="1.0">


                        <Spinner
                            android:id="@+id/malekspinner"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginBottom="15dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/spinnerstyle"
                            android:spinnerMode="dropdown"
                            android:fontFamily="@font/fontfamily"/>

                        <Spinner
                            android:id="@+id/typespinner"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/spinnerstyle"
                            android:spinnerMode="dropdown"
                            android:fontFamily="@font/fontfamily"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lvservicespinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lvregionspinner"
                        android:layout_marginTop="8dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">


                        <Spinner
                            android:id="@+id/jobspinner"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/spinnerstyle"
                            android:spinnerMode="dropdown"
                            android:fontFamily="@font/fontfamily"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lvbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lvregionspinner"
                        android:layout_marginTop="15dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/btnsubmit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="35dp"
                            android:layout_marginRight="35dp"
                            android:layout_marginBottom="15dp"
                            android:text="@string/submitbuffet"
                            android:background="@drawable/custom_button_green_"
                            android:spinnerMode="dropdown"
                            android:fontFamily="@font/fontfamily"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</LinearLayout>
