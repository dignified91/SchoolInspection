<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:openDrawer="start">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#075983"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:fontFamily="@font/fontfamily"/>


            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:paddingTop="8dp"
                app:srcCompat="@drawable/ic_back_svg"
                tools:ignore="VectorDrawableCompat" />

        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/toolbar"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/lypaymentfactor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#075983"
                android:gravity="center"

                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnpaymentfactor"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/ic_files_and_folders_svg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="@string/paymentfactor"
                    android:textColor="@color/background"
                    android:textSize="14dp"
                    android:fontFamily="@font/fontfamily"/>

            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/lyform"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#0C618C"
                android:gravity="center"

                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnsendform"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/ic_check_list_svg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="@string/sendform"
                    android:textColor="@color/background"
                    android:textSize="14dp"
                    android:fontFamily="@font/fontfamily"/>

            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/lyerror"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#136C9C"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnerror"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/ic_error_svg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="@string/senderror"
                    android:textColor="@color/background"
                    android:textSize="14dp"
                    android:fontFamily="@font/fontfamily"/>


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/lycontract"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#256EA0"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btncontract"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/ic_check" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="@string/contract"
                    android:textColor="@color/background"
                    android:textSize="14dp"
                    android:fontFamily="@font/fontfamily"/>


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lycheckcompany"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#2E77AD"
                android:gravity="center"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/btncheckcompany"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/ic_check" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="@string/checkcompany"
                    android:textColor="@color/background"
                    android:textSize="14dp"
                    android:fontFamily="@font/fontfamily"/>

            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lyprice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#3C85C0"
                android:gravity="center"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/btnprice"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/ic_calculate_svg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="@string/calculateprice"
                    android:textColor="@color/background"
                    android:textSize="14dp"
                    android:fontFamily="@font/fontfamily"/>

            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lyscan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#468FCE"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnscan"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/ic__qr_code_svg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="@string/scanqr"
                    android:textColor="@color/background"
                    android:textSize="14dp"
                    android:fontFamily="@font/fontfamily"/>

            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lysign"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#569FDB"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnsign"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/ic_signature_svg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="@string/sign"
                    android:textColor="@color/background"
                    android:textSize="14dp"
                    android:fontFamily="@font/fontfamily"/>

            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lyend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#65A8E6"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnend"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:background="@drawable/ic_end_svg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="@string/endins"
                    android:textColor="@color/background"
                    android:textSize="14dp"
                    android:fontFamily="@font/fontfamily"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
